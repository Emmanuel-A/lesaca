<style>
    .zoomElement {
      box-sizing: border-box;
    }

    /* The Modal (background) */
    .modal {
      display: none;
      position: fixed;
      z-index: 10010;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
    }

    /* Modal Content */
    .modal-content {
      position: absolute;
      margin: auto;
      padding: 0;
      width: 91.5%;
      height: 100%;
      right: 0;
    }

    /* The Close Button */
    .close {
      color: #b60000;
      position: fixed;
      top: 0;
      right: 15px;
      font-size: 35px;
      font-weight: bold;
      z-index: 10012301;
      transition: 0.6s ease;
      width: 20px;
    }

    .close:hover,
    .close:focus {
      color: #999999;
      text-decoration: none;
      cursor: pointer;
    }

    .mySlides {
      display: none;
    }
    
    .mySlides img {
      width: 100%;
    }

    .mySlides:hover img {
      cursor: zoom-out;
    }
    /* Next & previous buttons */
    .prev {
      left: 109px;      
    }
    .prev,
    .next {
      cursor: pointer;
      position: fixed;
      top: 50%;
      width: auto;
      padding: 16px;
      margin-top: -50px;
      color: #ffffff;
      font-weight: bold;
      font-size: 20px;
      transition: 0.6s ease;
      border-radius: 0 3px 3px 0;
      user-select: none;
      -webkit-user-select: none;
    }

    /* Position the "next button" to the right */
    .next {
      right: 0;
      border-radius: 3px 0 0 3px;
    }

    /* On hover, add a black background color with a little bit see-through */
    .prev:hover,
    .next:hover {
      color: #999999;
    }

    img {
      margin-bottom: -4px;
    }

    @media screen and (max-width: 767px) {
      .modal-content {
        display: none;
      }
      .close {
        display: none;
      }
    }
</style>


<div class="page-width">
  {% comment %} {% for block in section.blocks %}
      {% if block.type == 'image' %}
      <div class="zoomElement">
          <img src="{{ block.settings.image | img_url: '2800x2800' }}" onclick="openModal();currentSlide(1)" class="product_image">
      </div>
      {% endif %}
  {% endfor %} {% endcomment %}

  <div id="myModal" class="modal">
      <span class="close cursor" onclick="closeModal()">{% include 'close' %}</span>
      <div class="modal-content">
      {% for block in section.blocks %}
          {% if block.type == 'image' %}
          <div class="mySlides" onclick="closeModal()">
              <img src="{{ block.settings.image | img_url: '2800x2800' }}" onclick="openModal();currentSlide({{ forloop.index }})" class="product_image">
          </div>
          {% endif %}
      {% endfor %}

      {% comment %} <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a> {% endcomment %}
      </div>
  </div>

  {% for block in section.blocks %}
    {% if block.type == 'image' %}
      <div class="grid_product zoomElement" onclick="openModal();currentSlide({{ forloop.index }})" class="product_image">
          <img src="{{ block.settings.image | img_url: '2800x2800' }}" class="product_image">
      </div>
    {% endif %}
    {% if block.type == 'button' %}
      <div class="grid_product" class="product_image">
        <a href="{{ block.settings.link }}">
            <img src="{{ block.settings.imageBtn | img_url: '2800x2800' }}">
        </a>
      </div>
    {% endif %}
    {% if block.type == 'video' %}
      <video class="product_video" width="100%" height="auto" autoplay="" playsinline="" loop="" muted="">
        <source src="{{ block.settings.link }}" type="video/mp4"> 
      </video> 
    {% endif %}
  {% endfor %}
</div>

<script>
  if ($(window).width() >= 767) {
    function openModal() {
    $(document).scrollTop();
      document.getElementById("myModal").style.display = "block";
    }

    function closeModal() {
      $(document).scrollTop();
      document.getElementById("myModal").style.display = "none";
    }

    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
      $(document).scrollTop();
      showSlides(slideIndex += n);
    }

    function currentSlide(n) {
      $(document).scrollTop();
      showSlides(slideIndex = n);
    }

    function showSlides(n) {
      var i;
      var slides = document.getElementsByClassName("mySlides");
      if (n > slides.length) {slideIndex = 1}
      if (n < 1) {slideIndex = slides.length}
      for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
      }
      slides[slideIndex-1].style.display = "block";
    }

    document.onkeydown = function(e) {
      e = e || window.event;

      if (e.keyCode == '37') {
        $("html, body").animate({ scrollTop: 0 }, 100);
        plusSlides(-1);
      }
      else if (e.keyCode == '39') {
        $("html, body").animate({ scrollTop: 0 }, 100);
        plusSlides(1);
      }
      else if (e.keyCode == '27') {
        $("html, body").animate({ scrollTop: 0 }, 100);
        closeModal();
      }
    };
  }
</script>
  

