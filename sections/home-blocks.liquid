<div class="block_row_wrapper">    
  <div class="row">
    {% for block in section.blocks %}
      {% if block.type == 'image_block' %}
        <div class="image">
          <a href="{{ block.settings.pageLink }}" title="{{ block.settings.content }}" class="image_block" style="background: url('{{ block.settings.image_mobile | img_url: '2800x2800', scale: 3 }}');">  
            <span style="display: block; color: {{ block.settings.imageHeadingColor }}; font-size: 32px;">{{ block.settings.imageHeading }}</span>
          </a>
        </div>
      {% endif %}
      {% if block.type == 'video_block' %}
        {% if block.settings.page_link != blank %}
          <a href="{{ block.settings.page_link }}">
        {% endif %}
          <span style="display: block; color: {{ block.settings.videoHeadingColor }}; font-size: 32px;">{{ block.settings.videoHeading }}</span>
          <video class="product_video" width="100%" height="auto" autoplay="" playsinline="" loop="" muted="">
              <source src="{{ block.settings.video_link }}" type="video/mp4"> 
          </video> 
        {% if block.settings.page_link != blank %}
          </a>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Home Page Blocks",
  "class": "box-grid",
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "label": "Heading",
          "id": "imageHeading",
          "type": "text"
        },
        {
          "type": "color",
          "id": "imageHeadingColor",
          "label": "Heading Color",
          "default": "#000000"
        },
        {
          "label": "Mobile Image",
          "id": "image_mobile",
          "type": "image_picker"
        },
        {
          "label": "Page Link",
          "id": "pageLink",
          "type": "url"
        }
      ]
    },
    {
      "type": "video_block",
      "name": "Video Block",
      "settings": [
         {
          "label": "Heading",
          "id": "videoHeading",
          "type": "text"
        },
        {
          "type": "color",
          "id": "videoHeadingColor",
          "label": "Heading Color",
          "default": "#000000"
        },
        {
          "label": "Video Link",
          "id": "video_link",
          "type": "url"
        },
        {
          "label": "Page Link",
          "id": "page_link",
          "type": "url"
        }
      ]
    }
  ]
}
{% endschema %}
